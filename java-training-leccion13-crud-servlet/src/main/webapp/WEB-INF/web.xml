<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
	<display-name>Archetype Created Web Application</display-name>
	<description>SE DEFINEN LAS CLASES NECESARIAS PARA EL CRUD</description>
	
	<servlet>
		<servlet-name>CreateServlet</servlet-name>
		<display-name>CreateServlet</display-name>
		<description></description>
		<servlet-class>training.lab.crud.servlet.CreateServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ListServlet</servlet-name>
		<display-name>ListServlet</display-name>
		<description></description>
		<servlet-class>training.lab.crud.servlet.ListServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>EditarServlet</servlet-name>
		<display-name>EditarServlet</display-name>
		<description></description>
		<servlet-class>training.lab.crud.servlet.EditarServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>ActualizarServlet</servlet-name>
		<display-name>ActualizarServlet</display-name>
		<description></description>
		<servlet-class>training.lab.crud.servlet.ActualizarServlet</servlet-class>
	</servlet>

	<servlet>
		<servlet-name>EliminarServlet</servlet-name>
		<display-name>EliminarServlet</display-name>
		<description></description>
		<servlet-class>training.lab.crud.servlet.EliminarServlet</servlet-class>
	</servlet>
	
	
	<description>MAPEADO DE CADA SERVLET</description>
	<servlet-mapping>
		<servlet-name>CreateServlet</servlet-name>
		<url-pattern>/CreateServlet/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ListServlet</servlet-name>
		<url-pattern>/ListServlet/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EditarServlet</servlet-name>
		<url-pattern>/EditarServlet/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>ActualizarServlet</servlet-name>
		<url-pattern>/ActualizarServlet/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>EliminarServlet</servlet-name>
		<url-pattern>/EliminarServlet/*</url-pattern>
	</servlet-mapping>
</web-app>